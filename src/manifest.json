{
  "manifest_version": 2,
  "name": "ytsnap",
  "description": "Takes screenshots",
  "version": "0.1.0",
  "background": {"scripts": ["js/background.js"]},
  "permissions": ["commands", "notifications", "tabCapture"],
  "browser_action": {
    "default_popup": "html/screenshots.html"
  },
  "icons": {
    "48":  "images/camera48.png",
    "64":  "images/camera64.png",
    "96":  "images/camera96.png",
    "128": "images/camera128.png"
  },
  "commands": {
    "take_screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Takes a screenshot"
    }
  }
}
