{
  "manifest_version": 2,
  "name": "Screenshot",
  "description": "A browser extension that takes screenshots.",
  "version": "0.1.1",
  "background": {"page": "html/background.html"},
  "permissions": ["commands", "notifications", "activeTab"],
  "browser_action": {
    "default_popup": "html/browser_action.html"
  },
  "icons": {
    "48":  "images/camera48.png",
    "64":  "images/camera64.png",
    "96":  "images/camera96.png",
    "128": "images/camera128.png"
  },
  "commands": {
    "capture-visible-tab": {
      "suggested_key": {
        "default": "Ctrl + Shift + X",
        "mac": "Command + Shift + X"
      },
      "description": "Takes a screenshot of the visible area on the current tab."
    },
    "capture-html5-video": {
      "suggested_key": {
        "default": "Ctrl + Shift + V",
        "mac": "Command + Shift + V"
      },
      "description": "Takes a screenshot of the video on the current tab."
    }
  }
}
