{
  "manifest_version": 2,
  "name": "Screenshot",
  "description": "Takes a screenshot of the visible area on the current tab in response to a key stroke (ctrl + shift + k).",
  "version": "0.1.0",
  "background": {"page": "html/background.html"},
  "permissions": ["commands", "notifications", "activeTab"],
  "browser_action": {
    "default_popup": "html/browser_action.html"
  },
  "icons": {
    "48":  "images/camera48.png",
    "64":  "images/camera64.png",
    "96":  "images/camera96.png",
    "128": "images/camera128.png"
  },
  "commands": {
    "take_screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Takes a screenshot"
    },
    "take_screenshot_and_copy_to_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Takes a screenshot and copies it to the clipboard"
    }
  }
}
